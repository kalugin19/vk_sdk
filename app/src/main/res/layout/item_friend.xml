<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" >

    <data>

        <variable
                name="friend"
                type="com.vk.tools.vktools.data.entities.Friend" />

    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                app:src="@{friend.photo}"
                android:id="@+id/friend_photo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

        <TextView
                android:text="@{friend.lastName}"
                tools:text="Name Name"
                android:id="@+id/friend_name"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/friend_photo"
                android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>
</layout>
